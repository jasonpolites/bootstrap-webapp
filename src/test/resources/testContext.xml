<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="responseFactory" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.polites.view.ResponseFactory"/>
    </bean>

    <bean id="getHandler" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.polites.model.GetService"/>
    </bean>

</beans>
